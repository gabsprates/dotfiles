{
    "editor.codeActionsOnSave": { "source.fixAll.eslint": "explicit" },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.fontFamily": "'Ubuntu Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 15,
    "editor.formatOnSave": true,
    "editor.lineHeight": 1.5,
    "editor.minimap.renderCharacters": false,
    "editor.stickyScroll.enabled": false,

    "files.associations": { "*.ftl": "html" },

    "polacode.target": "snippet",
    "polacode.transparentBackground": true,

    "terminal.external.linuxExec": "terminator",
    "terminal.integrated.fontFamily": "mono",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.tabs.enabled": false,

    "typescript.tsdk": "node_modules/typescript/lib",

    "window.titleBarStyle": "custom",
    "window.zoomLevel": -1,

    "workbench.colorTheme": "Monokai",
    "workbench.panel.defaultLocation": "left",
    "workbench.sideBar.location": "right",
    "workbench.tree.indent": 16,

    "[java]": { "editor.defaultFormatter": "redhat.java" },
    "[shellscript]": { "editor.defaultFormatter": "foxundermoon.shell-format" },
    "[python]": { "editor.defaultFormatter": "ms-python.autopep8" }
}
